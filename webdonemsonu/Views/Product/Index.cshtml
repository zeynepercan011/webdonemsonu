@model List<webdonemsonu.Models.ViewModels.ProductVM>
@inject IImageService _imageService

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Ürün Kataloğu</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@_imageService.GetImageDisplay(product.Image)" 
                         class="card-img-top" 
                         style="height: 200px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;"
                         alt="@product.Name" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted mb-1">@product.CategoryName</p>
                        </div>
                        <div class="mt-auto">
                            <p class="card-text fw-bold text-end">@product.Price.ToString("C")</p>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" 
                               class="btn btn-outline-primary w-100">
                                Detay
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
